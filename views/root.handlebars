<img src="logo.png" alt="pickt_logo" class="logo">
<header>
	<h1>Welcome to Pickt.</h1>
</header>

{{#if error}}
<div class="login-container">
<div class="row">
	<h2>Error:</h2>
	{{error}}
</div>
</div>
{{/if}}

<div class="login-container">
	<div class="row">

	<div class="col">
	<form id="login-form" method="post" action="/login">
		<label for="username">Username: </label>
		<input type="text" name="username" id="username" required>
		<br>
		<label for="password">Password: </label>
		<input type="password" name="password" id="password" required>
		<button type="submit">Log in</button>
	</form>
	</div>

	<div class="line">
		<span class="vl-txt">or</span>
	</div>

	<div class="col">
	<form id="sign_up_form" method="post" action="/signup">
		<label for="username">Username: </label>
		<input type="text" name="username" id="signUpUsername" required>
		<br>

		<label for="password">Password: </label>
		<input type="password" name="password" id="signUpPassword" required>
		<br>

		<label for="re_password">Retype Password: </label>
		<input type="password" name="re_password" id="re_password" required>
		<br>

		<label for="name">Enter Your Name: </label>
		<input type="text" name="name" id="name" required>
		<br>

		<label for="region">Region: </label>
		<br>
		<select name = "region" id = "region" required>
		</select>
		<br>

		<label for="state">State: </label>
		<br>
		<select name = "state" id = "state" required>
		</select>
		<br>

		<label for="local">Local: </label>
		<br>
		<select name = "local" id = "local" required>
		</select>
		<br>

		<button type="submit">Sign Up</button>
	</form>

	</div>
	</div>
</div>
<script src="public/form.js"></script>